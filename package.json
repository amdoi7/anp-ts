{
  "name": "anp-ts",
  "version": "0.0.1",
  "description": "TypeScript SDK for DID-WBA authentication (language migration of anp-go)",
  "type": "module",
  "main": "dist/index.js",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "bun": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "bun": "./src/client/index.ts"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "bun": "./src/server/index.ts"
    },
    "./ap2": {
      "types": "./dist/ap2/index.d.ts",
      "import": "./dist/ap2/index.js",
      "bun": "./src/ap2/index.ts"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "bun": "./src/core/index.ts"
    }
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "rollup -c",
    "example:auth": "bun run examples/01-auth/basic.ts",
    "example:ap2": "bun run examples/02-ap2/cart-payment.ts",
    "example:crawler": "bun run examples/crawler/fetch_interface.ts",
    "example:agent-server": "bun run examples/03-agent/server.ts",
    "example:agent-client": "bun run examples/03-agent/client.ts",
    "example:agent-p2p": "bun run examples/03-agent/p2p.ts",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "did",
    "wba",
    "authentication",
    "anp"
  ],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "bun-types": "latest",
    "depcheck": "^1.4.7",
    "rollup": "^4.52.5",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-esbuild": "^6.2.1"
  },
  "dependencies": {
    "@noble/curves": "2.0.1",
    "@noble/hashes": "^2.0.1",
    "ajv": "^8.17.1",
    "canonicalize": "^2.1.0",
    "jose": "^6.1.0",
    "lru-cache": "^11.2.2",
    "reflect-metadata": "^0.2.2",
    "zod": "^4.1.12",
    "zod-to-json-schema": "^3.24.6"
  }
}